{
    "$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
    "name": "Umi",
    "patterns": [
        { "include": "#comments" },
        { "include": "#keywords" },
        { "include": "#booleans" },
        { "include": "#strings" },
        { "include": "#characters" },
        { "include": "#numbers" },
        { "include": "#operators" }
    ],
    "repository": {
        "comments": { "name": "comment.line.number-sign", "begin": "#", "end": "\n" },
        "keywords": {
            "patterns": [
                { "name": "keyword.other", "match": "\\b(il|ilf|alias)\\b" },
                { "name": "keyword.control", "match": "\\b(if|else|while)\\b" }
            ]
        },
        "booleans": { "name": "constant.language.boolean", "match": "\\b(true|false)\\b" },
        "strings": {
            "name": "string.quoted.double",
            "begin": "\"",
            "end": "\"",
            "patterns": [{ "name": "constant.character.escape", "match": "\\\\." }]
        },
        "characters": {
            "name": "string.quoted.single",
            "begin": "'",
            "end": "'",
            "patterns": [{ "name": "constant.character.escape", "match": "\\\\." }]
        },
        "numbers": {
            "name": "constant.numeric",
            "match": "\\b\\d+"
        },
        "operators": {
            "name": "keyword.operator",
            "match": "[=+\\-*\\/%|&><!]+"
        }
    },
    "scopeName": "source.umi"
}
