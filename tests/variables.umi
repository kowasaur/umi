# These can not be reassigned so they are like constants but they
# are evaluated each time they are referenced
alias SECONDS_IN_HOUR = 60 * 60

int32 hoursToSeconds(int32 hours) { hours * SECONDS_IN_HOUR }

void main() {
    string message = "hello!"
    print(message)

    int32 number = 32
    int32 number_2 = number
    print(number)
    print(number_2)

    message = "\"goodbye\" :("
    print(message)

    # the same characters C# supports should work
    char utf16 = 'æµ·' 
    print(utf16)

    print(hoursToSeconds(30))
}
