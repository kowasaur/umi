class Person {
    String name
    Int age

    # TODO: use the constructor keyword instead
    Person(String name, Int a) {
        this.name = name
        age = a
        print("Making " + name + " caused a side effect")
    }

    Void introduce() {
        consoleWrite("Hello I am " + name + ", ")
        print(this.age)
    }

    # Returns the Person's age after `years` years
    Int ageAfterYears(Int years) { age + years }
}

Void main() {
    Person p = Person("Barry", 63)
    print(p.name)
    print(p.age)
    p.introduce()
    print(p.ageAfterYears(15))
}
